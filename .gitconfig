    username = gabo06123@gmail.com

[push]
    autoSetupRemote = true

[pager]
# Use `diff-highlight`
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

[merge]
    conflictStyle = zdiff3

[rerere]
    enabled = true

[diff]
    algorithm = histogram
    colorMoved = default

[branch]
    sort = -committerdate

# magnet config
[includeIf "gitdir:~/magnet/"]
    path = ~/magnet/.gitconfig

[includeIf "gitdir:/usr/src/app/"]
