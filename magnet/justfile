alias sp:=start-dpt-project
alias cpdb:=copy-dpt-db

default:
  @just --list --unsorted

# start dpt project
start-dpt-project DIR:
  @./scripts/start-dpt-project.sh {{DIR}} $(basename {{DIR}})

# start django3-project-template
d3pt: (start-dpt-project 'django3-project-template')

# start root
root: (start-dpt-project 'magnet-root-d3pt')

# start asset-intranet
asset: (start-dpt-project 'asset-intranet')

# start aes-essprim
aes: 
  @./scripts/start-aes-essprim.sh

# copy the database from a server, defaults to {{current_dir}}.dev
copy-dpt-db *ARGS:
  cd {{invocation_directory()}} && {{justfile_directory()}}/scripts/copy-dpt-db.sh {{ARGS}}
